<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
        
<struts>
    <package name="default" extends="json-default" namespace="/">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">jsonData.*</param>
            </result-type>
        </result-types>
        
        <interceptors>
            <interceptor name="authnInterceptor" class="authenticationInterceptor"/>
            <interceptor-stack name="securedStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="authnInterceptor"/>
            </interceptor-stack>
        </interceptors>

        <action name="index" class="indexAction">
            <interceptor-ref name="securedStack"/>
            <result name="success">/WEB-INF/index.jsp</result>
        </action>

        <action name="login" class="loginAction">
            <result type="json" />
        </action>

        <action name="register" class="registerAction">
            <result type="json" />
        </action>

        <action name="activate" class="activateAction">
            <result name="success">/WEB-INF/activateSuccess.jsp</result>
            <result name="error">/WEB-INF/error.jsp</result>
        </action>

        <action name="logout" class="logoutAction">
            <result type="json" />
        </action>

        <action name="captchaImage" class="captchaImageAction">
            <result name="success" type="stream">
                <param name="contentType">image/png</param>
                <param name="inputName">inputStream</param> 
                <param name="bufferSize">1024</param>
            </result>
        </action>

    </package>
</struts>
