<?xml version="1.0"?>
<!-- A template which defines a set of project phases for the First2Finish contest category -->
<Template name="First2Finish">
    <!--     An enumeration of project phase types defined in this template -->
    <PhaseTypes>
        <PhaseType id="registration" typeId="1" typeName="Registration"/>
        <PhaseType id="submission" typeId="2" typeName="Submission"/>
        <PhaseType id="iterative_review" typeId="18" typeName="Iterative Review"/>
    </PhaseTypes>
    <!--     A set of project phases defined in this template. -->
    <Phases>
        <Phase id="registrationPhase" length="864000000" type="registration" phaseId="1">
        </Phase>

        <Phase id="submissionPhase" length="864000000" type="submission"  phaseId="2">
            <Dependency id="registrationPhase" isDependencyStart="true" isDependentStart="true" lagTime="300000"/>
        </Phase>

        <Phase id="iterativeReviewPhase" length="86400000" type="iterative_review"  phaseId="18">
            <Dependency id="submissionPhase" isDependencyStart="true" isDependentStart="true" lagTime="0"/>
        </Phase>
    </Phases>
</Template>
