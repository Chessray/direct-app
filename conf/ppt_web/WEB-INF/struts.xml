<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
        
<struts>
    <package name="default" extends="json-default" namespace="/">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult">
                <param name="ignoreHierarchy">false</param>
                <param name="includeProperties">jsonData.*</param>
            </result-type>
        </result-types>
        
        <interceptors>
            <interceptor name="authnInterceptor" class="authenticationInterceptor"/>
            <interceptor-stack name="securedStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="authnInterceptor"/>
            </interceptor-stack>
        </interceptors>
        
        <action name="index" class="com.topcoder.ppt.action.IndexAction">
            <interceptor-ref name="securedStack"/>
            <result name="success">/WEB-INF/index.jsp</result>
        </action>
        <action name="login" class="loginAction">
            <result type="json" />
        </action>
        <action name="register" class="registerAction">
            <result type="json" />
        </action>
        <action name="logout" class="com.topcoder.ppt.action.LogoutAction">
            <result type="json" />
        </action>
    </package>
</struts>
